<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="@dimen/widget_item_horizontal_padding"
    android:layout_marginRight="@dimen/widget_item_horizontal_padding"
    android:layout_marginTop="@dimen/widget_ingredient_item_vertical_padding"
    android:layout_marginBottom="@dimen/widget_ingredient_item_vertical_padding"
    android:padding="@dimen/list_item_padding"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/widget_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/widget_ingredient_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>